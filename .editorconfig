root = true

[*]
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.{ipynb,py,toml}]
indent_size = 4

[*.rst_t]
indent_size = 3

# when adding words through vscode, this is the resulting output format
[.cspell.json]
indent_size = 4

[setup.cfg]
indent_size = 4
